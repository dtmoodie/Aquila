macro(ocv_parse_header FILENAME FILE_VAR)
  set(vars_regex "")
  set(__parnet_scope OFF)
  set(__add_cache OFF)
  foreach(name ${ARGN})
    if("${name}" STREQUAL "PARENT_SCOPE")
      set(__parnet_scope ON)
    elseif("${name}" STREQUAL "CACHE")
      set(__add_cache ON)
    elseif(vars_regex)
      set(vars_regex "${vars_regex}|${name}")
    else()
      set(vars_regex "${name}")
    endif()
  endforeach()
  if(EXISTS "${FILENAME}")
    file(STRINGS "${FILENAME}" ${FILE_VAR} REGEX "#define[ \t]+(${vars_regex})[ \t]+[0-9]+" )
  else()
    unset(${FILE_VAR})
  endif()
  foreach(name ${ARGN})
    if(NOT "${name}" STREQUAL "PARENT_SCOPE" AND NOT "${name}" STREQUAL "CACHE")
      if(${FILE_VAR})
        if(${FILE_VAR} MATCHES ".+[ \t]${name}[ \t]+([0-9]+).*")
          string(REGEX REPLACE ".+[ \t]${name}[ \t]+([0-9]+).*" "\\1" ${name} "${${FILE_VAR}}")
        else()
          set(${name} "")
        endif()
        if(__add_cache)
          set(${name} ${${name}} CACHE INTERNAL "${name} parsed from ${FILENAME}" FORCE)
        elseif(__parnet_scope)
          set(${name} "${${name}}" PARENT_SCOPE)
        endif()
      else()
        unset(${name} CACHE)
      endif()
    endif()
  endforeach()
endmacro()

macro(aq_install_python_test FILEPATH)
    if(TARGET aquila_python)
      get_filename_component( basename ${FILEPATH} NAME)
      add_custom_target(${basename} SOURCES ${FILEPATH})
      if(UNIX)
          configure_file(${FILEPATH} ${CMAKE_BINARY_DIR}/${basename} @ONLY)
      else()
          configure_file(${FILEPATH} Debug/${basename} @ONLY)
          configure_file(${FILEPATH} RelWithDebInfo/${basename} @ONLY)
          configure_file(${FILEPATH} Release/${basename} @ONLY)
      endif()
      install(FILES ${FILEPATH} DESTINATION ${CMAKE_INSTALL_PREFIX}/lib)
    endif()
endmacro()
